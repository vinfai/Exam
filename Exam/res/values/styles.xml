<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/Theme.Customactionbartheme"></style>

    <style name="FullScreenTheme" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppCustomTheme" parent="@style/AppTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemTextStyle</item>
    </style>

    <style name="SpinnerItemTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">@dimen/actionbar_title_text</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PublicLoadingProgressStyle">
        <item name="android:maxWidth">50.0dip</item>
        <item name="android:maxHeight">50.0dip</item>
        <item name="android:indeterminateDrawable">@anim/public_loading</item>
        <item name="android:minWidth">50.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>

    <style name="SubTitleLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/subtitle_height</item>
        <item name="android:background">@color/subtitle_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
    </style>

    <style name="SubTitleLabel" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ShadowedText">
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="ShadowedText.Light" parent="@style/ShadowedText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff555555</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TipsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tips_text</item>
        <item name="android:textColor">@color/tips_text</item>
    </style>

    <style name="HyperText">
        <item name="android:textSize">@dimen/hint_text</item>
        <item name="android:textColor">@color/link_color_selector</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContentText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text</item>
        <item name="android:textColor">@color/content_text</item>
    </style>

    <style name="BottomBar">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bottombar_normal</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottombar_height</item>
    </style>

    <style name="NormalButton">
        <item name="android:textSize">@dimen/normal_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:layout_width">@dimen/normal_button_width</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
    </style>

    <style name="GreyButton">
        <item name="android:textSize">@dimen/normal_button_text</item>
        <item name="android:textColor">@color/medium_gray</item>
        <item name="android:background">@drawable/btn_grey</item>
        <item name="android:layout_width">@dimen/normal_button_width</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
    </style>

    <style name="RedButton">
        <item name="android:textSize">@dimen/normal_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_red</item>
        <item name="android:layout_width">@dimen/normal_button_width</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
    </style>

    <style name="BlackButton">
        <item name="android:textSize">@dimen/normal_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_black</item>
        <item name="android:layout_width">@dimen/normal_button_width</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
    </style>

    <style name="GreenButton">
        <item name="android:textSize">@dimen/normal_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_green</item>
        <item name="android:layout_width">@dimen/normal_button_width</item>
        <item name="android:layout_height">@dimen/normal_button_height</item>
    </style>

    <style name="FullButton" parent="@style/NormalButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/full_button_height</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="List">
        <item name="android:background">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:groupIndicator">@null</item>
        <item name="android:divider">@null</item>
        <item name="android:childDivider">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:scrollingCache">false</item>
        <item name="android:scrollbars">none</item>
        <item name="android:smoothScrollbar">true</item>
    </style>

    <style name="NoSelectorList" parent="@style/List">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="TabItemLayout">
        <item name="android:background">@drawable/bg_bottombar_item</item>
        <item name="android:paddingLeft">0.0dip</item>
        <item name="android:paddingRight">0.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="Style.TabItem.Label" parent="@style/ShadowedText">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/bottombar_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">1.5dip</item>
    </style>

    <style name="BottomTabNoticeBubble">
        <item name="android:textSize">@dimen/small_notice_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_msgtip_normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2.0dip</item>
        <item name="android:layout_marginRight">-20.0dip</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:lineSpacingExtra">0.0dip</item>
        <item name="android:marqueeRepeatLimit">1</item>
    </style>

    <style name="MenuWindow">
        <item name="android:windowEnterAnimation">@anim/menu_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/menu_slide_out_bottom</item>
    </style>

    <style name="HintText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_text</item>
    </style>

    <style name="Theme.Transparent" parent="@android:style/Theme">
        <item name="android:colorForeground">#ffffffff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="LineVertical">
        <item name="android:background">@color/divideline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.0px</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/divideline</item>
        <item name="android:layout_width">2.0px</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ListDivider" parent="@style/LineVertical">
        <item name="android:background">@color/divideline_listview</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:background">@drawable/list_item_selector</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
    </style>

    <style name="ListItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/list_item_text</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="ListItemArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/ic_arrow_right</item>
    </style>

    <style name="InfoItem">
        <item name="android:layout_height">@dimen/setting_item_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/list_item_selector</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
    </style>

    <style name="InfoItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/list_item_text</item>
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="InfoItemImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="InfoItemTitleText" parent="style/InfoItemText">
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="InfoItemArrow" parent="@style/ListItemArrow" />

    <style name="SettingItem" parent="@style/InfoItem" />

    <style name="SettingItemText" parent="@style/InfoItemTitleText" />

    <style name="SettingItemArrow" parent="@style/InfoItemArrow" />

    <style name="TimeTipsUI">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/tips_bg</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:textColor">@color/background_normal</item>
        <item name="android:textSize">@dimen/normal_text</item>
    </style>

    <style name="SmallCustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
    </style>
    
    <style name="ChattingUIItem">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChattingUIContent">
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ChattingUIText">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxWidth">240.0dip</item>
        <item name="android:minHeight">15.0dip</item>
        <item name="android:lineSpacingExtra">2.0dip</item>
    </style>

    <style name="ChattingUIState">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>

    <style name="ChattingUIAvatarFrom">
        <item name="android:layout_width">@dimen/normal_avatar_size</item>
        <item name="android:layout_height">@dimen/normal_avatar_size</item>
        <item name="android:layout_marginRight">@dimen/normal_padding</item>
        <item name="android:src">@drawable/avatar_default_normal</item>
    </style>

    <style name="ChattingUIAvatarTo">
        <item name="android:layout_width">@dimen/normal_avatar_size</item>
        <item name="android:layout_height">@dimen/normal_avatar_size</item>
        <item name="android:layout_marginLeft">@dimen/normal_padding</item>
        <item name="android:src">@drawable/avatar_default_normal</item>
    </style>

</resources>